<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.klaudia.myapplication.RecipeView"
    android:layout_marginBottom="?android:attr/actionBarSize">


    <ImageView
        android:id="@+id/image_recipe"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/cooking_time"
        android:layout_width="180dp"
        android:layout_height="30dp"

        android:gravity="fill_vertical"
        android:text="Cooking time: "
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:paddingLeft="8dp"
        android:layout_below="@+id/preparation_time"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/preparation_time"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:paddingLeft="8dp"

        android:gravity="fill_vertical"
        android:text="Preparation time: "
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_below="@+id/image_recipe"
        android:layout_alignParentStart="true"

        android:layout_toStartOf="@+id/cooking_time"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/price"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:textAlignment="gravity"
        android:gravity="fill_vertical"
        android:text="Price: "
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:paddingLeft="8dp"
        android:layout_below="@+id/servings"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/servings"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:textAlignment="gravity"
        android:gravity="fill_vertical"
        android:text="Servings: "
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:paddingLeft="8dp"

        android:layout_below="@+id/cooking_time"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ListView

        android:id="@+id/detail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/price" />

</RelativeLayout>
