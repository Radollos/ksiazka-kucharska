<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.klaudia.myapplication.ComplexSearch">


    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:columnCount="6"
        android:rowCount="16"
        android:id="@+id/gridLayoutComplexSearch"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="59dp">

        <TextView
            android:id="@+id/cuisineTV"
            android:textColor="#000000"
            android:layout_width="139dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="10px"
            android:paddingTop="30px"
            android:text="Cuisine" />

        <EditText
            android:id="@+id/cuisineET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="10px"
            android:hint="e.g. european, thai, italian"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:textSize="14sp" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/dietTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="10px"
            android:paddingTop="30px"
            android:text="Diet" />

        <EditText
            android:id="@+id/dietET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="10px"
            android:hint="e.g. pescetarian, lacto/ovo vege"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:textSize="14sp" />

        <TextView
            android:textColor="#000000"

            android:id="@+id/queryTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="10px"
            android:paddingTop="30px"
            android:text="Tags*" />

        <EditText
            android:id="@+id/queryET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="10px"
            android:hint="e.g. beef, burger, salad"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:textSize="14sp" />

        <TextView
            android:textColor="#000000"

            android:id="@+id/typeTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="10px"
            android:paddingTop="30px"
            android:text="Type" />

        <EditText
            android:id="@+id/typeET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="10px"
            android:hint="e.g main course, side dish"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:paddingTop="30px"
            android:textSize="14sp" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/excludeIngredientsTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="10px"
            android:paddingTop="30px"
            android:text="Exclude ingredients" />

        <EditText
            android:id="@+id/excludeIngredientsET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="10px"
            android:hint="e.g. onion, corn, bean"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:textSize="14sp" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/includeIngredientsTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="10px"
            android:paddingTop="30px"
            android:text="Include ingredients" />

        <EditText
            android:id="@+id/includeIngredientsET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="10px"
            android:hint="e.g. olives, salami"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/intolerancesTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:textColor="#000000"
            android:layout_gravity="left|fill"
            android:layout_marginTop="10px"
            android:paddingTop="30px"
            android:text="Intolerances" />

        <EditText
            android:id="@+id/intolerancesET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="10px"
            android:hint="e.g. dairy, egg, gluten, peanut"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:textSize="14sp" />
    </GridLayout>




    <TextView
        android:id="@+id/Calories"
        android:layout_width="368dp"
        android:layout_height="30dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_marginTop="8dp"
        android:paddingTop="30px"
        android:text="Calories: 150 - 1500 kcal"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/gridLayoutComplexSearch"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.appyvet.rangebar.RangeBar
        android:id="@+id/rangebarCal"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:background="#ffffff"
        custom:connectingLineColor="@color/colorMain"
        custom:layout_constraintHorizontal_bias="0.0"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent"
        custom:layout_constraintTop_toBottomOf="@+id/Calories"
        custom:pinColor="@color/colorMain"
        custom:rangeBarColor="@color/colorMain"
        custom:selectorColor="@color/colorMain"
        custom:tickColor="@color/colorMain"
        custom:tickEnd="1500"
        custom:tickInterval="5"
        custom:tickStart="150" />

    <TextView
        android:id="@+id/Carbs"
        android:layout_width="368dp"
        android:layout_height="30dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:paddingTop="30px"
        android:text="Carbs: 5 - 100 grams"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rangebarCal" />

    <com.appyvet.rangebar.RangeBar
        android:id="@+id/rangebarCarbs"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:background="#ffffff"
        custom:connectingLineColor="@color/colorMain"
        custom:layout_constraintHorizontal_bias="0.0"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent"
        custom:layout_constraintTop_toBottomOf="@+id/Carbs"
        custom:pinColor="@color/colorMain"
        custom:rangeBarColor="@color/colorMain"
        custom:selectorColor="@color/colorMain"
        custom:tickColor="@color/colorMain"
        custom:tickEnd="100"
        custom:tickInterval="1"
        custom:tickStart="5" />

    <TextView
        android:id="@+id/Fat"
        app:layout_constraintTop_toBottomOf="@+id/rangebarCarbs"
        android:layout_width="368dp"
        android:layout_height="30dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:paddingTop="30px"
        android:text="Fat: 5 - 100 grams"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <com.appyvet.rangebar.RangeBar xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rangebarFat"
        custom:layout_constraintTop_toBottomOf="@+id/Fat"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:background="#ffffff"
        custom:connectingLineColor="@color/colorMain"
        custom:layout_constraintHorizontal_bias="0.0"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent"
        custom:pinColor="@color/colorMain"
        custom:rangeBarColor="@color/colorMain"
        custom:selectorColor="@color/colorMain"
        custom:tickColor="@color/colorMain"
        custom:tickEnd="100"
        custom:tickInterval="1"
        custom:tickStart="5" />

    <TextView
        android:id="@+id/Proteins"
        app:layout_constraintTop_toBottomOf="@+id/rangebarFat"
        android:layout_width="368dp"
        android:layout_height="30dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:paddingTop="30px"
        android:text="Fat: 5 - 100 grams"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <com.appyvet.rangebar.RangeBar xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rangebarProteins"
        custom:layout_constraintTop_toBottomOf="@+id/Proteins"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:background="#ffffff"
        custom:connectingLineColor="@color/colorMain"
        custom:layout_constraintHorizontal_bias="0.0"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent"
        custom:pinColor="@color/colorMain"
        custom:rangeBarColor="@color/colorMain"
        custom:selectorColor="@color/colorMain"
        custom:tickColor="@color/colorMain"
        custom:tickEnd="100"
        custom:tickInterval="1"
        custom:tickStart="5" />

    <Button
        android:id="@+id/buttonComplexSearch"
        android:layout_width="368dp"
        android:background="@color/colorMain"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rangebarProteins"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp" />
</android.support.constraint.ConstraintLayout>
