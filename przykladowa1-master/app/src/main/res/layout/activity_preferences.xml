<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.klaudia.myapplication.Preferences">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0" />


    <Button
        android:id="@+id/buttonPreferences"
        android:layout_width="368dp"
        android:background="@color/colorMain"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayoutPreferences"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.54"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp" />

    <GridLayout
        android:id="@+id/gridLayoutPreferences"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="6"
        android:rowCount="16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/cuisineTV"
            android:layout_width="139dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:paddingTop="30px"
            android:text="Cuisine"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/cuisineET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dietTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:paddingTop="30px"
            android:text="Diet"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/dietET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/excludeIngredientsTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:paddingTop="30px"
            android:text="Exclude ingredients"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/excludeIngredientsET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/intolerancesTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:paddingTop="30px"
            android:text="Intolerances"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/intolerancesET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/minCaloriesTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:paddingTop="30px"
            android:text="Min calories"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/minCaloriesET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="number"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/maxCaloriesTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:paddingTop="30px"
            android:text="Max calories"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/maxCaloriesET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="number"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/minCarbsTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:paddingTop="30px"
            android:text="Min carbs"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/minCarbsET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="number"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/maxCarbsTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:paddingTop="30px"
            android:text="Max carbs"
            android:textSize="14sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/maxCarbsET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="number"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/minFatTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:paddingTop="30px"
            android:text="Min fat"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/minFatET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="number"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/maxFatTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:paddingTop="30px"
            android:text="Max fat"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/maxFatET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="number"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/minProteinsTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:paddingTop="30px"
            android:text="Min proteins"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/minProteinsET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="number"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/maxProteinsTV"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_marginTop="8px"
            android:layout_row="15"
            android:paddingTop="30px"
            android:text="Max proteins"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/maxProteinsET"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_columnSpan="4"
            android:layout_gravity="right|clip_horizontal"
            android:layout_marginTop="8px"
            android:inputType="number"
            android:textSize="14sp" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
